{
    "manifest_version": 3,
    "name": "On Flipping Cookies",
    "description": "Keeps flipper cookies synced in the front-end",
    "version": "1.0.0",
    "action": {
        "default_icon": "icon32.ico",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/eventPage.js"
    },
    "icons": {
        "16": "icon32.ico",
        "48": "icon32.ico",
        "128": "icon32.ico"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting",
	"cookies"
    ],
    "host_permissions": [
        "*://*/"
    ]
}
