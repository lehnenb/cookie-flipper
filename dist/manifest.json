{
    "manifest_version": 3,
    "name": "On Cookie Flipper",
    "description": "Keeps flipper cookies synced in the front-end",
    "version": "1.0.0",
    "action": {
        "default_icon": "icon32.ico",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/eventPage.js"
    },
    "icons": {
        "16": "icon32.ico",
        "48": "icon32.ico",
        "128": "icon32.ico"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "cookies"
    ],
    "host_permissions": [
        "*://localhost/",
        "*://127.0.0.1/",
        "https//www-*.on-running.com",
        "https://staging-beta.on-running.com/",
        "https://staging-customer-service.on-running.com/",
        "https://shop-staging.on-running.com/",
        "https://culture-staging.on-running.com/"
    ]
}
